form#findAndReplace
  overflow-y hidden
  .propertyrow
  .inputrow
    display block
    height 100%
    min-height 100%
    width 100%
    label
      display block
      width 100%
    input
      display block
      width 75%
      margin-bottom 15px
  .btn-group
    display inline-block
    height 100% !important
    min-height 100% !important
    .btn
      padding-left 15px
      padding-right 15px
  .button-below
    margin-top 2px
    padding-left 8px !important
    padding-right 8px !important
  .pickrow
    margin-top 20px
    display flex
    flex-direction row
    justify-content center
    span
      @extend form#findAndReplace .pickrow
      width 30%
      input
        width 7%
        margin-right 3px
      label
        width auto
  .form-control-feedback
    right: 88px
    top: 22px
.placeholder
  position relative
  // text-align right
.placeholder::after
  position: absolute
  right: 115px
  top: 30px
  content: attr(data-placeholder)
  pointer-events: none
  opacity: 0.6
  // text-align right

.checkbox
.bottom-line
  display flex
  flex-direction row
  justify-content flex-end
  .checkbox
    width 40%
    justify-content flex-end
    margin-right 10px
    padding-right 0
    #case-sensitive
      width 10%
    #case-sensitive-label
      width auto
